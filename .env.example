# Postgres
POSTGRES_USER=sovrana
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=sovrana

# Redis
REDIS_PASSWORD=change_me_in_production

# Auth
NEXTAUTH_SECRET=change_me_in_production
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=change_me_bcrypt_hash

# Polymarket (read-only keys for ingestion/brain)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Execution signing (never put real private keys here; use a vault)
# Each agent wallet is fetched from the secret manager at runtime
SECRET_MANAGER_BACKEND=env
VAULT_ADDR=
VAULT_TOKEN=

# Risk defaults (overridable per agent in DB)
DEFAULT_MAX_ORDER_SIZE_USDC=100
DEFAULT_MAX_EXPOSURE_USDC=500
DEFAULT_DAILY_LOSS_CAP_USDC=200
DEFAULT_SLIPPAGE_CAP_PCT=3.0
DEFAULT_COOLDOWN_SECONDS=60
DEFAULT_MAX_OPEN_ORDERS=10

# Global kill switch (set to true to halt all trading)
GLOBAL_KILL_SWITCH=false

# Service ports
INGESTION_PORT=8001
BRAIN_PORT=8002
EXECUTION_PORT=8003
UI_PORT=3000
